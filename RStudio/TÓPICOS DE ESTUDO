\section*{Tópicos de Estudo}

\subsection*{Lógica de Programação e Sintaxe}

\subsubsection*{Tópico 1: Variáveis e Operadores}

\textbf{Variáveis:} \\
Tipos de variáveis: Quantitativa e Qualitativa \\
Tipos de dados: \texttt{numeric}, \texttt{integer}, \texttt{character}, \texttt{logical}, \texttt{factor} \\

\textbf{Operadores:} \\
Aritméticos: \texttt{+}, \texttt{-}, \texttt{*}, \texttt{\^}, \texttt{\%} \\
Lógicos: \texttt{==}, \texttt{!=}, \texttt{<=}, \texttt{\&}, \texttt{|} \\
Sequências: \texttt{seq()}, \texttt{rep()}

\subsubsection*{Tópico 2: Estrutura de Dados}

\begin{itemize}
    \item \texttt{Vector}
    \item \texttt{Matrix}
    \item \texttt{List}
    \item \texttt{Data.frame}
    \item Fatiamento e Indexação
\end{itemize}

\subsubsection*{Tópico 3: Loops}

\begin{itemize}
    \item \texttt{if}, \texttt{else}, \texttt{ifelse}
    \item \texttt{for}
    \item \texttt{while}
    \item \texttt{next} e \texttt{break}
\end{itemize}

\subsubsection*{Tópico 4: Funções e Funções Vetorizadas}

Funções nativas do R: \texttt{sum()}, \texttt{mean()}, \texttt{length()}, \texttt{paste()} \\

Criação de funções: 
\begin{itemize}
    \item Argumentos
    \item \texttt{return()}
    \item Variáveis globais vs. variáveis locais
    \item Funções lambda
    \item Funções vetorizadas: \texttt{apply()}, \texttt{lapply()}, \texttt{sapply()}, \texttt{purrr::map()}
\end{itemize}

\textit{A partir deste ponto, já cobrimos toda a base lógica de programação. É ideal praticar exercícios que incluam todos esses quatro tópicos sem saber antecipadamente qual usar.}

\subsubsection*{Tópico 5 (Extra): Importação}

\begin{itemize}
    \item Importação de dados
    \item Importação de pacotes
\end{itemize}

\textbf{Prática:} \\
Análise descritiva e exploratória

\subsubsection*{Tópico 6: Medidas Descritivas}

\textbf{Medidas de posição:}
\begin{itemize}
    \item Tendência central: \texttt{mean()}, \texttt{median()}, moda
    \item Outras: Quartis, quantis, percentis, \texttt{min} e \texttt{max}
\end{itemize}

\textbf{Medidas de dispersão:}
\begin{itemize}
    \item \texttt{sd()}, \texttt{var()}, \texttt{range()}, CV, amplitude, interquartil
    \item \texttt{summary()}
\end{itemize}

\subsubsection*{Tópico 7: Manipulação de Dados}

\texttt{Data.frame:}
\begin{itemize}
    \item \texttt{nrow()}, \texttt{ncol()}, \texttt{summary()}
    \item Fatiamento: \texttt{df\$coluna}, \texttt{df[['coluna']]}, \texttt{df[a, b]}, \texttt{df[a]}
    \item \texttt{dplyr} e \texttt{tidyr} (\textbf{muito importante})
\end{itemize}

\subsubsection*{Tópico 8: Gráficos no R e ggplot2}

\begin{itemize}
    \item Criação e personalização de gráficos com \texttt{ggplot2}
\end{itemize}

\subsection*{Trabalho Final: Criação de um Modelo de Logística}

\textit{Tópicos, ementas, teoria: A pesquisar}

